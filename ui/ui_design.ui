   <string notr="true">/* === Base === */
QWidget {
    background-color: #0c101f;
    color: #dce6ff;
    font-family: 'Segoe UI', 'Montserrat', sans-serif;
    font-size: 14px;
}

/* === Cartes (QFrame, QWidget personnalis√©s) === */
QFrame {
    background-color: rgba(20, 26, 40, 0.9);
    border: 1px solid rgba(70, 120, 200, 0.3);
    border-radius: 18px;
}

/* === Boutons n√©on bleus === */
QPushButton {
    background-color: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 #152040, stop:1 #1e3a7e
    );
    color: #dce6ff;
    border: 1px solid #4561cc;
    border-radius: 14px;
    padding: 8px 20px;
    font-weight: 600;
    text-shadow: 0 0 6px #4a7dff;
}

QPushButton:hover {
    background-color: qlineargradient(
        spread:pad, x1:0, y1:0, x2:1, y2:1,
        stop:0 #1c2c5a, stop:1 #2f51c4
    );
    border: 1px solid #5a85ff;
    color: #e8efff;
}

QPushButton:pressed {
    background-color: #17234a;
}

/* === Champs texte === */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #131a33;
    border: 1px solid #3555a5;
    border-radius: 12px;
    padding: 6px 12px;
    color: #e0e6f2;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #5e90ff;
    background-color: #192445;
}

/* === Combobox === */
QComboBox {
    background-color: #1a2344;
    border: 1px solid #3555a5;
    border-radius: 12px;
    padding: 5px 10px;
    color: #dce6ff;
}

QComboBox:hover {
    border: 1px solid #5a85ff;
}

QComboBox::drop-down {
    border: none;
    background: transparent;
}

/* === CheckBox === */
QCheckBox {
    spacing: 6px;
    color: #cddaf9;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 1px solid #3a5cc8;
    background-color: #162444;
    border-radius: 5px;
}

QCheckBox::indicator:checked {
    background-color: #5a8eff;
    box-shadow: 0 0 6px #6ca0ff;
}

/* === Labels === */
QLabel {
    color: #dce6ff;
}

/* === ScrollBar custom === */
QScrollBar:vertical {
    background-color: transparent;
    width: 8px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #3254a2;
    border-radius: 4px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #5e8cff;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

/* === TabWidget === */
QTabWidget::pane {
    border: 1px solid #3555a5;
    border-radius: 10px;
    padding: 6px;
    background-color: rgba(18, 24, 39, 0.7);
}

QTabBar::tab {
    background: #192340;
    border: 1px solid #3555a5;
    padding: 6px 14px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    color: #b0c4ff;
}

QTabBar::tab:selected {
    background: #2b4aac;
    color: #ffffff;
    border-bottom: none;
}

/* === Tooltips === */
QToolTip {
    background-color: #1a2544;
    color: #eaf1ff;
    border: 1px solid #4a74c7;
    padding: 4px;
    border-radius: 6px;
}

/* === D√©sactivation visible === */
QPushButton:disabled {
    background-color: #222b44;
    color: #7a8bbd;
    border: 1px solid #3a4a6a;
}
QCheckBox:disabled {
    color: #7a8bbd;
}
QCheckBox::indicator:disabled {
    background-color: #232b3c;
    border: 1px solid #3a4a6a;
}
QLineEdit:disabled, QTextEdit:disabled {
    background-color: #181e2e;
    color: #7a8bbd;
    border: 1px solid #2a3550;
}
